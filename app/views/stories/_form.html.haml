= form_for @story do |f|
  -if @story.errors.any?
    #error_explanation
      %h2= "#{pluralize(@story.errors.count, "error")} prohibited this story from being saved:"
      %ul
        - @story.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :subject_type
    = f.text_field :subject_type
  .field
    = f.label :subject_id
    = f.number_field :subject_id
  .actions
    = f.submit 'Save'
