= provide(:title, current_user.full_name)

.row
  %aside.span4.offset1
    %section
      %h1{:style => "padding-bottom: 5px;"}
        = avatar_tag current_user
        = current_user.full_name
      - if current_user? current_user
        = link_to 'Create Bitelist', new_list_path, :class => "btn btn-warning"
      - else
        = render 'follow_form' if signed_in?
    %section.pad_bottom
      = render 'layouts/stats'

    - # only can show when a user is logged in or has something in their lists
    - if current_user && current_user.lists.any?
      %h3.big_title
        Your Bitelists
      %ol.lists
        %li
          = render "lists/list"
      = will_paginate @lists, :page_links => false

  .span6
    %h3.big_title
      Your Activity
    %ol.lists
      - if @feed.any?
        = render 'lists/feed'
      - else
        %li
          .well
            Nothing new happened yet :(
