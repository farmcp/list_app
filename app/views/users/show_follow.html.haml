= provide(:title, @title)

.row
  %aside.span4
    %section
      = avatar_tag @user
      %h1= @user.full_name
      %span= link_to "view my profile", @user

    %section
      = render 'layouts/stats'

  .span8
    %h3.big_title= @title
    %br

    %ul.users
      - @users.each do |user|
        %li
          = avatar_tag user
          = link_to user.full_name, user
    = will_paginate @users
