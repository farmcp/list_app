= provide(:title, @title)
.row
  %aside.span4
    %section
      = gravatar_for @user
      %h1= @user.first_name + " " + @user.last_name
      %span= link_to "view my profile", @user

    %section
      = render 'layouts/stats'

  .span8
    %h3= @title
    - if @users.any?
      %ul.users
        - @users.each do |user|
          %li
            = gravatar_for user
            = link_to user.full_name, user
      = will_paginate @users