= provide(:title, 'All Users')

%h1.big_title
  All users

= will_paginate(:page_links => false)
%ul.users
  - @users.each do |user|
    %li
      = gravatar_for user
      = link_to user.full_name

      - if current_user.admin? && !current_user?(user)
        = link_to "Remove", user, method: :delete, confirm: "Are you sure you want to delete #{user.full_name}?"

= will_paginate(:page_links => false)
