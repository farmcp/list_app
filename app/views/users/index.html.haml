= provide(:title, 'All Users')

.btn-group-wrap{style:'text-align:center;'}
  .btn-group{style: 'display: inline-block; text-align:center; width:inherit;'}
    =link_to "All Users", users_path, class: 'btn active'
    =link_to "Search", '#', class:'btn'

%br/

%h1{style:'text-align:center;'} All Users


- # render the followers and followeds
%section{style: 'position:absolute; left: 50%; margin-left:-65px;'}
  = render 'layouts/stats'
%br/
%br/


%ul.users
  - @users.each do |user|
    %li
      = gravatar_for user
      = link_to user.full_name, user

      - if current_user.admin? && !current_user?(user)
        = link_to "Remove", user, method: :delete, confirm: "Are you sure you want to delete #{user.full_name}?", style: 'float:right;'

= will_paginate(:page_links => false)
