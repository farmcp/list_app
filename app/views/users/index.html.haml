= provide(:title, 'Search')

%h1{style:'text-align:center;'} Find Biters


- # render the followers and followeds
%section{style: 'position:absolute; left: 50%; margin-left:-65px;'}
  = render 'layouts/stats'
%br/
%br/
%br/

.row
  .span6.offset3
    = form_tag users_path, method: 'get' do
      = text_field_tag :search, params[:search], style: 'width: 80%;'
      = submit_tag "Search", name: nil, class: 'btn btn-primary', style: 'height:40px;'


%ul.users
  - @users.each do |user|
    %li
      = gravatar_for user
      = link_to user.full_name, user

      - if current_user.admin? && !current_user?(user)
        = link_to "Remove", user, method: :delete, confirm: "Are you sure you want to delete #{user.full_name}?", style: 'float:right;'

= will_paginate(:page_links => false)
