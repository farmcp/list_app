%p
  %b Restaurant:
  = @edit_request.restaurant
%p
  %b User:
  = @edit_request.user
%p
  %b Status
  = @edit_request.status
- if @edit_request.has_diff?
  - @edit_request.parsed_params.each do |key, val|
    %p
      %b #{key.titleize}:
      = @edit_request.diff(key, val).html_safe
- else
  %i This edit request is empty
