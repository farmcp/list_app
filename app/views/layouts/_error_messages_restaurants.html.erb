<% if @restaurant.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@restaurant.errors.count, "error") %>.
    </div>
    <ul>
      <% @restaurant.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
