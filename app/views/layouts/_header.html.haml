%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %ul.nav
        %li= link_to "Bitelist", new_session_path, id: "logo"
        %li.divider-vertical.pull-left
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      .nav-collapse
        %nav
          - if signed_in?
            .navbar-search.pull-left
              = form_tag users_path, method:'get' do
                = text_field_tag :search, params[:search], class: 'search-query', placeholder:'Search users...', style: 'background-color:white; margin: 3px 0px -5px 0px; border-style:none;'
          %ul.nav.pull-right
            - if signed_in?
              %li
                = link_to current_user do 
                  %i.icon-user
                  Profile

              %li
                = link_to sync_path do 
                  %i.icon-refresh
                  Sync
              %li#fat-menu.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  %i.icon-folder-open
                  Account
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to fb_friends_user_path(current_user) do
                      %i.icon-envelope
                      Invite Friends
                  %li
                    = link_to edit_user_path(current_user) do
                      %i.icon-cog
                      Settings
                  %li.divider
                  %li
                    = link_to signout_path, method: "delete" do
                      %i.icon-off
                      Signout
            - else
              %li
                = link_to signin_path do
                  %i.icon-lock
                  Signin
