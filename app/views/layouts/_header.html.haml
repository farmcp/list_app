%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %ul.nav
        = link_to image_tag('bitelist_logo.gif', :size => '108x30', style: 'margin-top:5px; margin-right:10px;'), root_path
        %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      .nav-collapse
        %nav
          - if signed_in?
            .navbar-search.pull-left
              = form_tag users_path, method:'get' do
                = text_field_tag :search, params[:search], class: 'search-query', placeholder:'Search for users & restaurants...', style: 'background-color:white; margin: 3px 0px -5px 0px; border-style:none; width: 250px;'
          %ul.nav.pull-right
            - if signed_in?
              %li
                = link_to current_user do 
                  %i.icon-user.icon-white
                  Profile

              %li
                = link_to sync_path do 
                  %i.icon-refresh.icon-white
                  Sync
              %li#fat-menu.dropdown
                %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                  %i.icon-folder-open.icon-white
                  Account
                  %b.caret
                %ul.dropdown-menu
                  %li
                    = link_to fb_friends_user_path(current_user) do
                      %i.icon-envelope
                      Invite Friends
                  %li
                    = link_to edit_user_path(current_user) do
                      %i.icon-cog
                      Settings
                  %li
                    - if current_user.admin?
                      = link_to edit_requests_path do
                        %i.icon-pencil
                        Edit requests
                        %span.label.label-important
                          = EditRequest.needs_review.count

                  %li.divider
                  %li
                    = link_to signout_path, method: "delete" do
                      %i.icon-off
                      Signout
            - else
              %li
                = link_to signin_path do
                  %i.icon-lock.icon-white
                  Signin
