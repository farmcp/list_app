- provide(:title, "Sign in")

%h1.big_title
  Sign In

.row
  .span6.offset3
    = form_for(:session, url: sessions_path) do |f|
      = f.label :email
      = f.email_field :email
      = f.label :password
      = f.password_field :password
      = f.submit "Sign in", class: "btn btn-large btn-primary"
      %p
        New user?
        = link_to "Sign up now!", signup_path
