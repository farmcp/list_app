- provide(:title, "Sign in")

%h1.big_title
  Sign In

.row
  .span4.offset4.center
    %br/
    %p
      =link_to image_tag("fb_connect.png"), "/auth/facebook"
    %h3 OR
    %br/
    = form_for(:session, url: sessions_path) do |f|
      .pull-left
        = f.label :email
      = f.email_field :email
      .pull-left
        = f.label :password
      = f.password_field :password
      = f.submit "Login", class: "btn btn-large btn-primary"

    %p
      Don't have an account? 
      = link_to "Sign up now!", new_user_path

    %p
      Forgot your password? 
      = link_to "Recover it here!", new_password_reset_path