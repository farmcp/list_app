= provide(:title, @restaurant.name)

.row
  %aside.span4
    %section
      %h1{:style => "padding-bottom: 5px;float:left;"}
        = image_tag(@restaurant.picture_url, size: '80x80', title: @restaurant.name, alt: @restaurant.name)

      %div
        %h1{:style => "margin-left: 7px; float:left;"}
          = truncate(@restaurant.name, length:20)
          %br/

          = link_to_phone(@restaurant.phone_number)

    .pull-left
      = @restaurant.address

    %br/
    .pull-left
      #{@restaurant.city.name}, #{@restaurant.city.state} #{@restaurant.postal_code}
    %br/
    %br/
    %section


  .span8
    - # put the restaurant's website, pictures, address, comments here
    %h3.big_title
      Location
    %ol.lists
      %li
        .well
          = gmaps("map_options" => { "zoom" => 15, "auto_zoom" => false }, "markers" => { "data" => @maps_json })
