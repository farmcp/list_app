- provide(:title, 'Bite List')

%h1.big_title
  #{@list.city.abbreviation} Bite List

- # create a form to post to list_item_path (create method in list_items_controller)
.row{style: 'text-align:center;'}
  .span6.offset3
    - # only allow to post when it's the current user's account
    - if current_user == @list.user
      = form_for :restaurant, as: :post, :url => list_items_path do |f|
        = f.text_field :name, :style => 'width:75%;'
        = f.hidden_field :list_id, value: params[:id]

        = f.submit "Add", class: 'btn btn-primary', :style => 'height:40px;'

- # list all the items in the list
.row
  .span6.offset3
    %ol.lists
      - @list.list_items.each do |item|
        .well
          .pull-left.list-image
            = image_tag(item.restaurant.picture_url, size:'30x30')

          - if item.restaurant.name.length < 15
            = link_to item.restaurant.name, '#', class: 'pull-left list-item-text'
          - else
            = link_to truncate(item.restaurant.name.to_s, length: 15), '#', class: 'pull-left list-item-text'
          - if current_user? @list.user
            = link_to "Remove", item, method: :delete, confirm: "Are you sure you want to delete this Bite?", class: 'btn btn-danger pull-right list-remove-button'
